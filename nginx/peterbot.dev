server {
    listen 443 ssl;
    server_name peterbot.dev www.peterbot.dev;
    
    ssl_certificate /etc/letsencrypt/live/peterbot.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/peterbot.dev/privkey.pem;
    
    # Frontend-filer
    location / {
        root /var/www/peterbot.dev/client/dist;
        index index.html;
        try_files $uri $uri/ /index.html;  # Viktigt för React Router
    }
    
    # Backend API proxy - Lägg till detta block
    location /api {
    proxy_pass http://127.0.0.1:3002;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
}
}

# HTTP till HTTPS-omdirigering
server {
    listen 80;
    server_name peterbot.dev www.peterbot.dev;
    return 301 https://$host$request_uri;
}